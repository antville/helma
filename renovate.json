{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [
    "config:recommended",
    "mergeConfidence:all-badges",
    "npm:unpublishSafe",
    ":disableRateLimiting",
    ":pinVersions",
    ":semanticCommitsDisabled"
  ],

  "osvVulnerabilityAlerts": true,

  "vulnerabilityAlerts": {
    "labels": ["security", "urgent"],
    "automerge": true
  },

  "labels": ["dependency"],

  "packageRules": [
    {
      "matchFiles": ["build.gradle"],
      "labels": ["core"]
    }
  ]
}

